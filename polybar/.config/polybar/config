[bar/top]
monitor = ${env:MONITOR}

wm-restack = bspwm

width = 100%
height = 32
offset-y = 0

background = #0f1014
foreground = #ebece6

spacing = 6

padding-left = 5%
padding-right = 5%
module-margin-left = 1
module-margin-right = 1

font-0 = Source Sans Pro:size=9;2
font-1 = FontAwesome:size=9;2
font-2 = EmojiOne Color:size=9;2
font-3 = Source Han Sans KR:size=9;2

modules-left = bspwm music
modules-center = xwindow
modules-right = keyboard network-wired network-wireless volume battery date

tray-position = right

[module/bspwm]
type = internal/bspwm

format = <label-state> <label-mode>

pin-workspaces = true

label-focused = 
label-focused-padding = 2

label-occupied = 
label-occupied-padding = 2

label-urgent = 
label-urgent-foreground = #ffd02646
label-urgent-padding = 2

label-empty = 
label-empty-foreground = #33ffffff
label-empty-padding = 2


[module/date]
type = internal/date

interval = 1.0
date = %A %d %B,
time = %H:%M

date-alt = %A %d %B %Y,
time-alt = %H:%M:%S

label = %date% %time%
format =   <label>
format-padding-left = 2


[module/battery]
type = internal/battery

full-at = 95

battery = BAT0
adapter = AC0

poll-interval = 5

format-charging = <animation-charging>  <label-charging>
format-discharging = <ramp-capacity>  <label-discharging>
format-full = <ramp-capacity>  <label-full>
label-charging = %percentage%%
label-discharging = %percentage%%
label-full = %percentage%%
format-charging-padding = 2
format-discharging-padding = 2
format-full-padding = 2

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750


[module/volume]
type = internal/volume

format-volume =   <label-volume>
format-muted =   <label-muted>
label-volume = %percentage%%
label-muted = 0%
label-muted-foreground = #aaa
format-volume-padding = 2
format-muted-padding = 2


[module/keyboard]
type = custom/script

exec-if = which uim-status
exec = $HOME/.dotconfigs/polybar-scripts/get-uim-status-line.sh

interval = 1


[module/music]
type = internal/mpd
interval = 2

host = 127.0.0.1
port = 6600

format-playing =     <label-song>
format-paused =     <label-song>

label-song-maxlen = 48
label-song-ellipsis = true

[module/network-wired]
type = internal/network
interface = enp2s0

format-connected =   <label-connected>
label-connected = %downspeed%
format-padding = 2


[module/network-wireless]
type = internal/network
interface = wlp3s0

format-connected =    <label-connected>
label-connected = %essid%  %downspeed%


[module/xwindow]
type = internal/xwindow
label-maxlen = 90
