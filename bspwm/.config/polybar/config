[colors]
background = #19171a
foreground = #fcf2f8
accent = #f07fbe

[bar/top]
monitor = ${env:MONITOR}
wm-restack = bspwm

font-0 = Cantarell:pixelsize=11:antialias=true;3
font-1 = Noto Sans CJK KR:pixelsize=11:antialias=true;2

modules-left = system-name bspwm
modules-center = xwindow
modules-right = date

width = 100%
height = 32

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
padding-left = 3
padding-right = 3
module-margin = 1

separator = %{F#${colors.accent}|%{F-}


[module/system-name]
type = custom/text
content = "ê½ƒ "


[module/bspwm]
type = internal/bspwm
format = <label-state>
pin-workspaces = true

label-focused = %name%
label-focused-foreground = ${colors.accent}
label-focused-padding = 2
label-focused-overline = ${colors.accent}

label-occupied = %name%
label-occupied-foreground = ${colors.foreground}
label-occupied-padding = 2

label-empty =

label-urgent = %name%
label-urgent-foreground = ${colors.accent}
label-urgent-padding = 2


[module/xwindow]
type = internal/xwindow
label-maxlen = 120


[module/date]
type = internal/date

interval = 1.0
date = %A %d %B,
time = %H:%M

date-alt = %A %d %B %Y,
time-alt = %H:%M:%S

label = %date% %time%
format = <label>
format-padding = 1
