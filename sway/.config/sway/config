set $mod Mod4

include input.conf
include aesthetics.conf
include autorun.conf
include wmcontrol.conf

bindsym $mod+Return exec alacritty
bindsym $mod+d exec rofi -show drun
bindsym $mod+e exec thunar

bindsym Print exec hackery-screenshot.sh

bar {
    swaybar_command waybar
}

# machine-specific tweaks

## hackery-laptop screen
set $hackerylaptopscreen0 "Chimei Innolux Corporation 0x1242 0x00000000"
output $hackerylaptopscreen0 res 1600 900

## hackery-desktop screens
set $hackerydesktopscreen0 "Iiyama North America X2483/2481 1156480323669"
set $hackerydesktopscreen1 "Ancor Communications Inc VG248 G4LMQS010332"
output $hackerydesktopscreen0 res 1920x1080@74.973000Hz pos 0 0
output $hackerydesktopscreen1 res 1920x1080@144.001007Hz pos 1920 0

workspace 1 output $hackerydesktopscreen1
workspace 2 output $hackerydesktopscreen1

workspace 8 output $hackerydesktopscreen0
workspace 9 output $hackerydesktopscreen0
workspace 10 output $hackerydesktopscreen0

workspace 1
