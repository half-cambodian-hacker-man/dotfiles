set $mod Mod4

include input.conf
include aesthetics.conf
include autorun.conf
include wmcontrol.conf

bindsym $mod+Return exec alacritty
bindsym $mod+d exec rofi -show drun
bindsym $mod+e exec sh -c 'xdg-open $HOME'

bindsym Print exec hackery-screenshot.sh

bar {
    swaybar_command waybar
}

# machine-specific tweaks

exec_always sh -c 'swaymsg include "$HOME/.config/sway/machine-specific/$(hostname)/config"'
